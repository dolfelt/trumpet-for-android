<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background">
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:paddingBottom="1dp">
		<ImageView android:id="@+id/icon"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"
			android:scaleType="centerCrop"
			/>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="1dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:layout_marginLeft="5dp">
 	        <TextView android:id="@+id/name"
 	        	android:text="Attachment"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"

		        android:textSize="15dp"
		        android:textStyle="bold"
		        android:textColor="#000000" android:layout_centerVertical="true"/>	
 	        <TextView android:id="@+id/size"
 	        	android:text="0 KB"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:textSize="15dp"
		        android:textColor="#000000" android:layout_centerVertical="true"/>	
		</LinearLayout>
		<Button android:id="@+id/attach_delete_button"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginRight="5dp"
			android:textColor="#777777"
			android:layout_alignParentRight="true"
			android:textSize="12dp"
			android:text="X"
			android:textStyle="bold"
			android:background="@drawable/btn_standard"/>
	</LinearLayout>
	
	<View android:background="#11000000" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="1px" />
	
</RelativeLayout>
