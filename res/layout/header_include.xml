<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:paddingTop="0dp"
    android:paddingLeft="6dp"
    android:background="@drawable/header"
    >
   	<TextView android:id="@+id/title"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_centerVertical="true"
   		android:textColor="#FFFFFF"
   		android:textSize="15dp" 
   		android:textStyle="bold" android:text="Trumpet for Android" />
   	<LinearLayout
   		android:layout_height="fill_parent"
   		android:layout_width="wrap_content"
   		android:layout_alignParentRight="true"
   		android:gravity="center_vertical">
	   	<ProgressBar android:id="@+id/header_progress"
	        style="?android:attr/progressBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="3dp"
	        android:visibility="invisible" />
	    
	    <ImageButton android:id="@+id/title_location" 
	    	android:background="@drawable/title_button"
	    	android:src="@drawable/title_location" android:layout_width="40dp" android:layout_height="fill_parent"
	    	android:visibility="gone" />
	    <ImageButton android:id="@+id/title_attachments" 
	    	android:background="@drawable/title_button"
	    	android:src="@drawable/title_attachments" android:layout_width="40dp" android:layout_height="fill_parent"
	    	android:visibility="gone" />

	    <ImageButton android:id="@+id/title_reply" 
	    	android:background="@drawable/title_button"
	    	android:src="@drawable/title_reply" android:layout_width="40dp" android:layout_height="fill_parent"
	    	android:visibility="gone" />
	    
	    <ImageButton android:id="@+id/title_tweet" 
	    	android:background="@drawable/title_button" 
	    	android:src="@drawable/title_bubble" android:layout_width="40dp" android:layout_height="fill_parent"
	    	android:visibility="gone" />

	    <ImageButton android:id="@+id/title_refresh" 
	    	android:background="@drawable/title_button" 
	    	android:src="@drawable/title_refresh" android:layout_width="40dp" android:layout_height="fill_parent"
	    	android:visibility="gone" />
	    
    </LinearLayout>
</RelativeLayout>