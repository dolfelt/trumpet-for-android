<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Oversized Buttons -->
    <style name="ActionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#CC000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/btn_action</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="BoldListItem">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/list_background</item>
    </style>
    <style name="BoldListItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">12dp</item>
		<item name="android:textSize">24dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#333333</item>
    </style>
    
</resources>